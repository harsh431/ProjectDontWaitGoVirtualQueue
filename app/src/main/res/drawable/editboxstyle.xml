<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <item>
        <shape>
            <stroke
                android:width="1dp"
                android:color="#A9A9A9"></stroke>
            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp"/>
            <corners
                android:radius="0dp"/>

        </shape>
    </item>
    <item>
        <shape>
            <solid
                android:color="#fff"/>
            <corners
                android:radius="0dp"/>
        </shape>
    </item>
</layer-list>